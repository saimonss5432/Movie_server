<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/style.css" />
    <title>Hello!</title>
  </head>
  <body style="font-family: sans-serif">
    <h1 style="font-size: 5rem; text-align: center">Movie List</h1>
    <div class="cont">
      <div
        style="
          width: 100%;
          display: grid;
          place-content: center;
          margin-block-end: 1rem;
          padding-inline: 1rem;
          gap: 1rem;
        "
      >
        <video style="width: 100%" controls>
          <source id="mv" src="/mv/<%= files[mv]?.name %>" type="<%= files[mv]?.ext %>" />
        </video>
        <h2><%= files[mv]?.name %></h2>
        <a class="btn btn-danger" href="/download/<%=mv%>" download>â­³ Download</a>
      </div>
      <div>
        <input class="form-control" id="sr" type="search" placeholder="Search ðŸ”Ž" />
        <input id="tr" type="text" value="<%=JSON.stringify(files)%>" hidden />
        <br />
        <section>
          <% files.forEach((e, ind) => { %>
          <div class="dd <%= ((mv === ind) && 'active') %>">
            <p><span style="font-weight: 700"><%=ind + 1%>.</span>&nbsp;&nbsp;<%= e.name %></p>
            <div>
              <button class="cl btn btn-primary" data-index="<%=ind%>">â–¶ Play</button>
              <a class="btn btn-danger" href="/download/<%=ind%>" download>â­³ Download</a>
            </div>
          </div>
          <% }) %>
        </section>
      </div>
    </div>
  </body>
  <script>
    document.querySelectorAll('.cl').forEach((e) => {
      e.addEventListener('click', () => {
        let a = e.getAttribute('data-index');
        window.location.href = `/${a}`;
      });
    });
    document.getElementById('sr').addEventListener('keyup', (e) => {
      const text = e.target.value.toLowerCase();
      const files = JSON.parse(document.getElementById('tr').value);
      files.forEach((e, ind) => {
        let n = e.name.toLowerCase();
        if (text !== '') {
          let bool = n.includes(text);
          document.querySelectorAll('.dd')[ind].style.display = bool ? 'flex' : 'none';
        } else {
          document.querySelectorAll('.dd').forEach((ev) => {
            ev.style.display = 'flex';
          });
        }
      });
      console.log('---------------');
    });
  </script>
</html>
